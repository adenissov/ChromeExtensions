{
  "name": "311 Integration Request Validator",
  "description": "Auto-formats JSON and validates fields when switching Salesforce tabs",
  "version": "2.3",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://staff-cms.lightning.force.com/lightning/r/*"
      ],
      "js": [
          "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "action": {
    "default_icon": {
      "16": "/images/integration_request_validator_icon16.png",
      "32": "/images/integration_request_validator_icon32.png",
      "48": "/images/integration_request_validator_icon48.png",
      "128": "/images/integration_request_validator_icon128.png"
    }
  },
  "icons": {
    "16": "/images/integration_request_validator_icon16.png",
    "32": "/images/integration_request_validator_icon32.png",
    "48": "/images/integration_request_validator_icon48.png",
    "128": "/images/integration_request_validator_icon128.png"
  },
  
  "options_page": "options.html"
}
